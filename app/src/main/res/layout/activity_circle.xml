<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD9620"
    tools:context=".CircleActivity">

    <TextView
        android:id="@+id/tvActCirc"
        android:layout_width="334dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#090909"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivActCirc" />

    <EditText
        android:id="@+id/etActCirc"
        android:layout_width="329dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center"
        android:hint="enter size of radius"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActCirc" />

    <Button
        android:id="@+id/btActCirc"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#067381"
        android:text="Computing the area of the circle"
        app:layout_constraintEnd_toEndOf="@+id/etActCirc"
        app:layout_constraintStart_toStartOf="@+id/etActCirc"
        app:layout_constraintTop_toBottomOf="@+id/etActCirc" />

    <ImageView
        android:id="@+id/ivActCirc"
        android:layout_width="359dp"
        android:layout_height="259dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />
</androidx.constraintlayout.widget.ConstraintLayout>